<div class="container">

  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h1>
        マイページ
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 col-4">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 col-4">
      <P>
        名前
      </P>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= @user.name %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  </div>

</div>