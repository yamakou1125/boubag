<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h1>
        <%= @category.name %> 一覧
      </h1>
    </div>
  </div>

  <% @items.each do |item| %>
  <div class="row">
    <div class="col-md-6 col-sm-6 col-6">
      <%= link_to item_path(item.id), method: :get do %>
        <%= item.name %>
      <% end %>
    </div>
  </div>
  <% end %>

</div>