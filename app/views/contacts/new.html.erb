<div class="container">
  <div class="row mb-3">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
      <h3>
        <strong>
          お問い合わせフォーム
        </strong>
      </h3>
    </div>
  </div>

  <% if @contact.errors.any? %>
    <div class="row justify-content-center mb-3 text-danger">
      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <%= form_with model: @contact, url: contacts_confirm_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name, 'お名前' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.text_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :message, 'メッセージ' %>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>

      <div class="row justify-content-center mt-5">
        <%= f.submit '入力内容確認', class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>

</div>