<div class ="container">
  <div class ="row mb-5">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
      <h3>
        <strong>
          新規登録
        </strong>
      </h3>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class ="row mb-3">
      <%= f.label :name, "名前", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="row mb-3">
      <%= f.label :email, "メールアドレス", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="row mb-3">
      <%= f.label :password, "パスワード", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="row mb-5">
      <%= f.label :password_confirmation, "パスワード確認", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "登録", class: "btn btn-outline-success btn-lg" %>
    </div>
  <% end %>

</div>
