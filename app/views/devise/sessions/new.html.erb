<div class ="container">
  <div class ="row mb-5">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
      <h3>
        <strong>
          ログイン
        </strong>
      </h3>
    </div>
  </div>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="row mb-3">
    <%= f.label :email, "メールアドレス", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row mb-5">
    <%= f.label :password, "パスワード", class: "col-lg-5 col-md-5 col-sm-5 col-5 col-form-label text-right" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "ログイン", class: "btn btn-outline-primary" %>
  </div>
<% end %>

</div>
