<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h3>
        フォロワー
      </h3>
    </div>
  </div>

  <div class="row">
    <% @allows.each do |a| %>
     <% user = a.follower %>
    <div class="col-md-3 col-sm-3 col-3">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
    <div class="col-md-3 col-sm-3 col-3">
      <%= link_to user_path(user.id), method: :get do %>
        <%= user.name %>
      <% end %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h3>
        承認待ち一覧
      </h3>
    </div>
  </div>

  <div class="row">
    <% @unapproved.each do |u| %>
     <% user = u.follower %>
    <div class="col-md-3 col-sm-3 col-3">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
    <div class="col-md-3 col-sm-3 col-3">
      <%= user.name %>
    </div>
    <div class="col-md-3 col-sm-3 col-3">
      <%= link_to "許可する", user_relationships_path(user.id), method: :patch, class: "btn btn-primary" %>
    </div>
    <div class="col-md-3 col-sm-3 col-3">
      <%= link_to "拒否する", user_decline_path(user.id), method: :delete, class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
</div>