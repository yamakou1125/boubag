<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h1>
        フォロー一覧
      </h1>
    </div>
  </div>

  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-4 col-sm-4 col-4">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= user.name %>
    </div>
    <% if current_user.following?(user) %>
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to "フォローリクエストを取り消す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>