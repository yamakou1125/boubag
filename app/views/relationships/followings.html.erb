<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h1>
        フォロー中
      </h1>
    </div>
  </div>

  <div class="row">
    <% @allows.each do |a| %>
    <% user = a.followed %>
    <div class="col-md-4 col-sm-4 col-4">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to user_path(user.id), method: :get do %>
        <%= user.name %>
      <% end %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-12">
      <h1>
        リクエスト送信中
      </h1>
    </div>
  </div>

  <div class="row">
    <% @unapproved.each do |u| %>
    <% user = u.followed %>
    <div class="col-md-4 col-sm-4 col-4">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= user.name %>
    </div>
    <div class="col-md-4 col-sm-4 col-4">
      <%= link_to "フォローリクエストを取り消す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
</div>